package midlevel;

public class Member {

	private int id;
	private String name;
	private int point;
	private double bonus;  // 정보은닉때문에 super 키워드를 이용하여 가져와야함
	

	Member(int id, String name, int point) {
		this.id = id;
		this.name = name;
		this.point = point;
	}	
	
	
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getPoint() {
		return point;
	}
	public void setPoint(int point) {
		this.point = point;
	}

	public double getBonus() {
		return point * 0.03;
	}
		
}
