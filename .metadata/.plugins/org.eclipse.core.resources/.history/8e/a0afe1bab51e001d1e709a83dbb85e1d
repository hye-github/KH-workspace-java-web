package midlevel;

// 클래스 간의 관계
// Has-A 포함관계	-> A Has a B
// IS-A 상속관계	-> A Is a B

public class Gold {
	

	private int id;
	private String name;
	private int point;
	private double bonus;


	public Gold() {}

	public Gold(int id, String name, int point) {
		super();
		this.id = id;
		this.name = name;
		this.point = point;
	}

	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getPoint() {
		return point;
	}
	public void setPoint(int point) {
		this.point = point;
	}

	public double getBonus() {
		return point * 0.03;
	}
	

}