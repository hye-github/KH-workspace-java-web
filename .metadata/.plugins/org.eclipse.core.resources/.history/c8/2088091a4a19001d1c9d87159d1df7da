import java.awt.Robot;

public class Playing_01 {
	public static void main(String[] args) throws Exception{ // 예외전가

		Robot r = new Robot(); //첫글자가 대문자면 누군가가 클래스를 만들었다.
		// Robot에 명령을 하고 싶으면 r에 .을 찍으면 된다.
		r.mouseMove(500, 500); // 마우스 초기 위치 세팅
		
		for(int i = 0;i < 500;i++) {
			r.mouseMove(500+i,500);
			r.delay(10);
		}
		
	}
}
